{
  "brand": {
    "brand-primary": {
      "$type": "color",
      "$value": "#356bcf"
    },
    "brand-secondary": {
      "$type": "color",
      "$value": "#09bce9"
    },
    "brand-tertiary": {
      "$type": "color",
      "$value": "#a9ebfe"
    },
    "brand-neutral": {
      "$type": "color",
      "$value": "#c9c9c9"
    }
  },
  "component": {
    "card": {
      "card-bg": {
        "$type": "color",
        "$value": "{brand.brand-neutral}"
      },
      "card-headline": {
        "$type": "color",
        "$value": "{brand.brand-primary}"
      }
    },
    "button-primary-bg": {
      "$type": "color",
      "$value": "{brand.brand-primary}"
    },
    "button-secondary-bg": {
      "$type": "color",
      "$value": "{brand.brand-secondary}"
    }
  },
  "global": {
    "header": {
      "header-bg": {
        "$type": "color",
        "$value": "{brand.brand-primary}"
      },
      "header-link": {
        "$type": "color",
        "$value": "#ffffff"
      }
    },
    "border": {
      "$type": "color",
      "$value": "#ffffff"
    },
    "disabled": {
      "$type": "color",
      "$value": "#ffffff"
    },
    "site-bg": {
      "$type": "color",
      "$value": "#ffffff"
    },
    "footer": {
      "footer-bg": {
        "$type": "color",
        "$value": "{brand.brand-secondary}"
      },
      "footer-link": {
        "$type": "color",
        "$value": "#ffffff"
      }
    },
    "link": {
      "$type": "color",
      "$value": "{brand.brand-primary}"
    }
  }
}